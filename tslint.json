{
    "extends": "tslint:recommended",
    "defaultSeverity": "error",

    "rulesDirectory": [
        "./node_modules/codelyzer",
        "./node_modules/rxjs-tslint",
        "./node_modules/tslint-sonarts"
    ],

    "rules": {
        "angular-whitespace": {
            "options": ["check-interpolation", "check-pipe"]
        },
        "banana-in-box": true,
        "templates-no-negated-async": true,
        "directive-selector": {
            "options": ["attribute", "hs", "camelCase"]
        },
        "component-selector": {
            "options": ["element", "hs", "kebab-case"]
        },
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "use-view-encapsulation": true,
        "no-attribute-parameter-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "no-forward-ref": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "pipe-naming": {
            "options": ["camelCase", "hs"]
        },
        "component-class-suffix": true,
        "directive-class-suffix": true,
        "templates-use-public": true,
        "no-access-missing-member": true,
        "invoke-injectable": true,
        "template-to-ng-template": true,

        "rxjs-collapse-imports": true,
        "rxjs-pipeable-operators-only": true,
        "rxjs-no-static-observable-methods": true,
        "rxjs-proper-imports": true,

        "align": {
            "options": ["parameters", "arguments", "statements"]
        },
        "array-type": {
            "options": ["generic"]
        },
        "arrow-parens": false,
        "ban-comma-operator": true,
        "encoding": true,
        "interface-name": false,
        "linebreak-style": {
            "options": ["CRLF"]
        },
        "max-file-line-count": {
            "options": [300]
        },
        "member-access": {
            "options": ["no-public"]
        },
        "member-ordering": {
            "options": [
                {
                    "order": [
                        "public-static-field",
                        "private-static-field",
                        "public-instance-field",
                        "private-instance-field",
                        "public-constructor",
                        "public-instance-method",
                        "protected-instance-method",
                        "private-instance-method"
                    ]
                }
            ]
        },
        "no-angle-bracket-type-assertion": true,
        "no-console": false,
        "no-duplicate-imports": true,
        "no-duplicate-switch-case": true,
        "no-invalid-template-strings": true,
        "no-irregular-whitespace": true,
        "no-object-literal-type-assertion": true,
        "no-parameter-reassignment": true,
        "no-redundant-jsdoc": true,
        "no-require-imports": true,
        "no-return-await": true,
        "no-sparse-arrays": true,
        "no-this-assignment": true,
        "no-unnecessary-type-assertion": true,
        "number-literal-format": true,
        "object-literal-key-quotes": {
            "options": ["as-needed"]
        },
        "object-literal-sort-keys": false,
        "ordered-imports": [true, "grouped-imports"],
        "prefer-conditional-expression": true,
        "prefer-object-spread": true,
        "prefer-template": true,
        "quotemark": {
            "options": ["single"]
        },
        "return-undefined": true,
        "semicolon": {
            "options": ["never"]
        },
        "space-within-parens": {
            "options": [0]
        },
        "strict-boolean-expressions": true,
        "triple-equals": true,
        "use-default-type-parameter": true,
        "variable-name": {
            "options": ["ban-keywords", "check-format"]
        }
    }
}
